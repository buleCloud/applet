/* recommend.wxss */
.items{
  margin-top: 26rpx;
}
.mainsell{
  display: flex;
  flex-direction: row;
  margin:20rpx 48rpx; 
}
.mainsell .left{
     width: 180rpx;
     height: 180rpx;
     border-radius:4rpx;
     background: url(../../image/grey.png) repeat-x center center;
     background-position: center;
     background-size:cover;     
}
.mainsell .center{
    width: 234rpx;
    margin-left:20rpx
}
.mainsell .right{
    width: 220rpx;
    overflow: hidden;
}
.left{
  position:relative;
}
.imgs{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}
.tags{
  width:90rpx;
  height:90rpx;
  position: absolute;
  left:-8rpx;
  top:-8rpx;
}
.tag1{
  width:50rpx;
  height:60rpx;
  position: absolute;
  left:0;
  top:0;
}
.center .title{
  font-family:PingFangSC-Medium;
  font-size:28rpx;
  color:#4a4a4a;
  font-weight: bold;
}
.center .cons{
  font-family:PingFangSC-Regular;
  font-size:20rpx;
  color:#666666;
  margin-top: 24rpx;
  height: 90rpx;
  line-height: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.right .yhprice{
   font-family:PingFangSC-Regular;
  color:#da3f25; 
  float: right;
  margin-top:-10rpx;
}
.right .yhprice .price0{
    font-size:32rpx;
}
.right .yhprice .price1{
    font-size:34rpx;
}
.right .yhprice .price2{
    font-size:24rpx;
}
.right .yhprice .price3{
    font-size:28rpx;
}
.right .yhprice text{
  font-family:HelveticaNeue-Medium;
  font-size:36rpx;
  color:#da3f25;
  line-height:56rpx;
}
.right .yjprice{
  font-family:PingFangSC-Regular;
  font-size:24rpx;
  color:#666666;
  float: right;
  clear: both;
}
.right .yjprice text{
  font-family:PingFangSC-Regular;
 font-size:12px;
 color:#666666;
}
.right{
  position:relative;
}
.right .eat{
  font-family:PingFangSC-Light;
  font-size:20rpx;
    position: absolute;
    right:0;
    bottom:0rpx;
}
.empty{
  height: 4rpx;
  background:#f2f2f2;
  margin: 20rpx 48rpx 0 48rpx;
}


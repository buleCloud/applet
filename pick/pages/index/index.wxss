/**index.wxss**/
.mainban{
  width:100%;
  height:270rpx;
}
.mainban image{
  width: 100%;
  height:100%;
}
.flex-row{
  display: flex;
  margin-top: 30rpx;  
}
.word{
  text-align: center
}
.word a{
  font-size: 24rpx;
  color:#666;
  font-family:PingFangSC-Regular;
  margin-top: 16rpx;
  display: inline-block;
}
.hotimg{
  position: relative;
}
.hotimg .hotdot{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -14rpx;
  right: 22rpx;
}
.word .lowprice{
   font-size: 20rpx;
   color:#de533c;
   font-family:PingFangSC-Regular;
}
.flex-item{
    width: 25%;
    z-index:999;
}
.flex-item image{
   width: 120rpx;
   height:120rpx;
   display: block;
   margin:0 auto;
}
.remdban{
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin: 34rpx 48rpx 0 48rpx;
}
.remdban image{
  display: inline-block;
}
.remdban image{
   width: 182rpx;
   height: 8rpx;
}
.remdban .line1{
   margin-right: 50rpx;
}
.remdban .line2{
   margin-left: 50rpx;
}
.remdban .dot{
   width: 6rpx;
   height: 6rpx;
   margin-right: 10rpx;
}
.remdban .tuijian{
  font-family:PingFangSC-Medium;
  font-size:28rpx;
  color:#f7d346;
  font-weight:600;
}
.remditem{
  display: inline-block
}
.remditem image{
  width: 184rpx;
  height: 164rpx;
  border: 1px solid #f2f2f2;
  border-radius:16rpx;
  padding:30rpx 6rpx;
}
.remditem{
  padding-top: 20rpx;
}
.empty{
  height: 16rpx;
  background-color: #f2f2f2;
  margin-top: 26rpx;
}
.mainsell{
  display: flex;
  flex-direction: row;
  /* margin:36rpx 48rpx;  */
  margin: 18rpx 48rpx 0;

}
.mainsell .left{
     width: 180rpx;
     height: 180rpx;
     border-radius:4rpx;
     background: url(../../image/grey.png) repeat-x center center;
     background-position: center;
     background-size:cover; 
}
.mainsell .center{
      width: 234rpx;
       margin-left:20rpx 
}
.mainsell .right{
     width: 220rpx;
     overflow: hidden;
}
.mainsell .left image{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}
.center .title{
  font-family:PingFangSC-Medium;
  font-size:28rpx;
  color:#4a4a4a;
  font-weight: bold;
  line-height: 36rpx;
  height:auto;
}
.center .cons{
  font-family:PingFangSC-Regular;
  font-size:20rpx;
  color:#666666;
  margin-top: 22rpx;
  height: 90rpx;
  line-height: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.right .yhprice{
   font-family:PingFangSC-Regular;
  color:#da3f25; 
  float: right;
  margin-top:-10rpx;
}
.right .yhprice .price0{
    font-size:32rpx;
}
.right .yhprice .price1{
    font-size:34rpx;
}
.right .yhprice .price2{
    font-size:24rpx;
}
.right .yhprice .price3{
    font-size:28rpx;
}
.right .yhprice text{
  font-family:HelveticaNeue-Medium;
  font-size:36rpx;
  color:#da3f25;
  line-height:56rpx;
}
.right .yjprice{
  font-family:PingFangSC-Regular;
  font-size:24rpx;
  color:#666666;
  float: right;
  clear: both;
}
.right .yjprice text{
  font-family:PingFangSC-Regular;
 font-size:12px;
 color:#666666;
}
.right{
  position:relative;
}
.right .eat{
    position: absolute;
    right:0;
    bottom:0rpx;
}
.right .eat  text{
  font-family:PingFangSC-Light;
  font-size:20rpx;
  color:#666666;
}
.empty{
  height: 4rpx;
  background:#f2f2f2;
  margin-left:48rpx;
  margin-right:48rpx;
  margin-top: 20rpx;
}
